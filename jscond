<!DOCTYPE html>
<head>
<meta charset=utf-8 />
<title>Calculator</title>
<script type="text/javascript">
function multiplyBy()
{
        var x = parseInt(document.getElementById("1st").value);
        var y = parseInt(document.getElementById("2nd").value);
        
        if(isNaN(x)){
        document.write("1st input is not a number.<br>");
        };
        if(isNaN(y)){
        document.write("2nd input is not a number.");
        }
        else{
        totalValue = document.getElementById("value").innerHTML=(x*y);
        };
};

function additionBy()
{
        var x = parseInt(document.getElementById("1st").value);
        var y = parseInt(document.getElementById("2nd").value);
        if(isNaN(x)){
        document.write("1st input is not a number.<br>");
        };
        if(isNaN(y)){
        document.write("2nd input is not a number.");
        }
        else{
        totalValue = document.getElementById("value").innerHTML=(x+y);
        };
};

function subtractBy()
{
        var x = parseInt(document.getElementById("1st").value);
        var y = parseInt(document.getElementById("2nd").value);
if(isNaN(x)){
        document.write("1st input is not a number.<br>");
        };
        if(isNaN(y)){
        document.write("2nd input is not a number.");
        }
        else{
        totalValue = document.getElementById("value").innerHTML=(x-y);
        };
};

function divideBy()
{
        var x = parseInt(document.getElementById("1st").value);
        var y = parseInt(document.getElementById("2nd").value);
if(isNaN(x)){
        document.write("1st input is not a number.<br>");
        };
        if(isNaN(y)){
        document.write("2nd input is not a number.");
        }
        else{
        totalValue = document.getElementById("value").innerHTML=(x/y);
        };
}
</script>
</head>
<body>
<h3>Input 1st number: <input type="number" id="1st"  /></h3>
<h3>Input 2nd number: <input type="number" id="2nd"  /></h3>  
<p>
<input type="button" onClick="multiplyBy()" Value="Multiply" />
<input type="button" onClick="additionBy()" Value="Add" />
<input type="button" onClick="subtractBy()" Value="Subtract" />
<input type="button" onClick="divideBy()" Value="Divide" />
</p>
<h4>Value: <span id = "value">Empty</span>
</h4>
</body>
</html>
